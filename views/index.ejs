<div
  style="
    display: flex;
    width: 100%;
    height: 100%;
    align-items: center;
    justify-content: flex-start;
    box-sizing: border-box;
    flex-direction: column;
    margin: 0;
    padding: 0;
    position: relative;
    font-family: sans-serif;
    margin-top: 50px;
  "
>
  <h1>Hi <%= name %></h1>
  <form action="/logout?_method=DELETE" method="POST">
    <button
      style="
        width: 100%;
        height: max-content;
        padding: 10px 20px;
        border: none;
        outline: none;
        background-color: #000941;
        color: #fff;
        font-size: 18px;
        border-radius: 5px;
        cursor: pointer;
      "
      type="submit"
    >
      Log Out
    </button>
  </form>
</div>
